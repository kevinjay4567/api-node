// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id      Int    @id @default(autoincrement())
  credits Int
  name    String
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
}

model Token {
  id     Int    @id @default(autoincrement())
  token  String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String
  courses  Course[]
  tokens   Token[]
}
